<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentHomePage">


    <include layout="@layout/student_homepage_navbar" />

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/llNavBar"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_post"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginEnd="@dimen/margin_start_end"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginStart="55dp"
        android:padding="2dp"
        android:text="@string/post_a_requirement"
        android:textSize="16sp"
        android:fontFamily="@font/adamina"
        app:layout_constraintTop_toBottomOf="@+id/llNavBar"
        app:layout_constraintStart_toStartOf="@id/ivPost"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ivTutor"
        android:layout_width="32dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/ivPost"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_tutor"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginEnd="@dimen/margin_start_end"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginStart="50dp"
        android:padding="6dp"
        android:text="@string/find_a_tutor"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPost"
        app:layout_constraintStart_toStartOf="@id/ivTutor"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ivViewPost"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/ivTutor"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_view_post"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginEnd="@dimen/margin_start_end"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvViewPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginStart="50dp"
        android:padding="6dp"
        android:text="@string/view_posted_requirements"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTutor"
        app:layout_constraintStart_toStartOf="@id/ivViewPost"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvViewPost"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:background="#FF691CC1"
        android:id="@+id/view"
        />

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_start_end"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:text="@string/user_info"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="32dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserInfo"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginEnd="@dimen/margin_start_end"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginStart="50dp"
        android:padding="6dp"
        android:text="@string/profile"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserInfo"
        app:layout_constraintStart_toStartOf="@id/ivProfile"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="32dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_setting"
        android:layout_marginStart="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginEnd="@dimen/margin_start_end"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_marginStart="50dp"
        android:padding="6dp"
        android:text="@string/setting"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:layout_constraintStart_toStartOf="@id/ivSetting"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:fontFamily="@font/adamina"
        />


</androidx.constraintlayout.widget.ConstraintLayout>