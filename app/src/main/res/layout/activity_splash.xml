<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">


    <View
        android:layout_width="@dimen/splash_circle_images"
        android:layout_height="@dimen/splash_circle_images"
        android:background="@drawable/circle_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/v1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/circle_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/v2"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/iv"
            android:contentDescription="@string/logo"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:text="@string/tutor_connect"
        android:textColor="@color/logo_text_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="@dimen/splash_circle_images"
        android:layout_height="@dimen/splash_circle_images"
        android:background="@drawable/circle_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/v3"
        android:layout_marginTop="80dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
